@model IEnumerable<ABCRetail2.Models.CustomerProfile>

@{
    ViewBag.Title = "Customer Profiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/customerprofile.css" rel="stylesheet" />

<h2>Customer Profiles</h2>

<!-- Form for adding a new customer profile -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Add New Customer Profile</h3>
    </div>
    <div class="card-body">
        <form asp-action="SaveCustomerProfile" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="customerName" class="form-label">Name</label>
                <input type="text" class="form-control" id="customerName" name="CustomerName" placeholder="Enter customer's full name" required>
                <div class="invalid-feedback">Please enter the customer's name.</div>
            </div>
            <div class="mb-3">
                <label for="customerEmail" class="form-label">Email</label>
                <input type="email" class="form-control" id="customerEmail" name="CustomerEmail" placeholder="Enter customer's email address" required>
                <div class="invalid-feedback">Please enter a valid email address.</div>
            </div>
            <button type="submit" class="btn btn-primary">Save Profile</button>
        </form>
    </div>
</div>

<!-- Table to display customer profiles from the database -->
<h3 class="mt-4">Existing Customer Profiles</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var profile in Model)
        {
            <tr>
                <td>@profile.CustomerName</td>
                <td>@profile.CustomerEmail</td>
            </tr>
        }
    </tbody>
</table>
