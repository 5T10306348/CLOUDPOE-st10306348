@model ABCRetail2.Models.CustomerProfile

@{
    ViewBag.Title = "Add Customer Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Add Customer Profile</h3>
                </div>
                <div class="card-body">
                    <form asp-action="SaveCustomerProfile" method="post" class="needs-validation" novalidate>
                        <div class="mb-4">
                            <label for="customerName" class="form-label">Name</label>
                            <input type="text" class="form-control" id="customerName" name="CustomerName" value="@Model.CustomerName" placeholder="Enter customer's full name" required>
                            <div class="invalid-feedback">
                                Please enter the customer's name.
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="customerEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="customerEmail" name="CustomerEmail" value="@Model.CustomerEmail" placeholder="Enter customer's email address" required>
                            <div class="invalid-feedback">
                                Please enter a valid email address.
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Save Profile</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Enable Bootstrap's custom form validation
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>
