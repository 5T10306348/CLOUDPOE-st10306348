@model IEnumerable<ABCRetail2.Models.Order>

@{
    ViewBag.Title = "View Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Orders</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Address</th>
            <th>City</th>
            <th>Province/State</th>
            <th>Zip Code</th>
            <th>Country</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.RowKey</td>
                <td>@order.CustomerName</td>
                <td>@order.CustomerEmail</td>
                <td>@order.ProductName</td>
                <td>R@(order.ProductPrice)</td>
                <td>@order.Address</td>
                <td>@order.City</td>
                <td>@order.Province</td>
                <td>@order.ZipCode</td>
                <td>@order.Country</td>
                <td>
                    @if (!string.IsNullOrEmpty(order.ProductImageUri))
                    {
                        <img src="@order.ProductImageUri" alt="Product Image" class="img-thumbnail" style="max-width: 100px;" />
                    }
                    else
                    {
                        <span>No image available</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
